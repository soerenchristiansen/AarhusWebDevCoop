@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

@{ var selection = CurrentPage.Site().FirstChild("ProjectsMain").Children("ProjectsItem").Where("Visible"); }

<h2>@Umbraco.Field("sitetitle")</h2>
<p>@Umbraco.Field("maincontent")</p>
	@if (CurrentPage.HasValue("homeImage"))
    {
        <img src='@CurrentPage.homeImage.src' width="100%" height="400px" alt="image" />
    }

<h2>Projects</h2>
<ul class="list-group">
	@if (selection.Any())
	{
		foreach (var item in selection)
		{
			<li class="list-group-item">
				@item.Name
			</li>
		}
	}	
</ul>